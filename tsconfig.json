{
  "compilerOptions": {
    "target": "ES2022", // 选择ES版本
    "module": "ESNext", // 打包后的JavaScript使用的模块系统（最新）
    "moduleResolution": "node", // 使用 Node.js 的模块解析策略（最新）
    "lib": ["ESNext", "DOM", "DOM.Iterable"], // 使用最新的 JavaScript 和浏览器库
    "skipLibCheck": true, // 跳过库文件类型检查，提升编译速度
    "declaration": true, // 生成类型声明文件
    "composite": true, // 启用增量编译，适用于大型项目
    "strict": true, // 启用严格模式，确保更高质量的代码
    "sourceMap": true, // 生成源映射文件，便于调试
    "declarationMap": true, // 生成声明映射文件，帮助调试类型声明
    "resolveJsonModule": true, // 允许导入 JSON 模块
    "esModuleInterop": true, // 允许与 CommonJS 模块互操作
    "noEmitOnError": false, // 遇到错误时不发出输出文件
    "noUnusedLocals": false, // 禁止未使用的局部变量
    "noUnusedParameters": false, // 禁止未使用的函数参数
    "noImplicitReturns": true, // 禁止函数没有明确返回值
    "noImplicitOverride": true, // 禁止子类覆盖父类的方法时没有使用 `override` 关键字
    "incremental": true, // 启用增量编译，减少编译时间
    "useDefineForClassFields": false // 禁用 class 字段的 `define` 语法，避免与 TypeScript 的行为冲突
  },
  "references": [
    { "path": "packages/core" },
    { "path": "packages/napkin" },
    { "path": "packages/model" }
  ]
}
